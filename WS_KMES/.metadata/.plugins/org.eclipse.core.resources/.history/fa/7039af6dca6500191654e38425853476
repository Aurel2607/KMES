
def table(nb):
    i = 0 # Notre compteur ! L'auriez-vous oublié ?
    while i < 10: # Tant que i est strictement inférieure à 10,
        print(i + 1, "*", nb, "=", (i + 1) * nb)
        i += 1 # On incrémente i de 1 à chaque tour de boucle.
        
nbr_txt = input("entrez la table: ")
nbr = int(nbr_txt)
table(nbr)
